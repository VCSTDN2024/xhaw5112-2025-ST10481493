<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".MainActivity6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity6">

        <!-- Consistent Header -->
        <LinearLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/lightblue"
            android:gravity="center_vertical"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_bg_light"
                android:backgroundTint="@color/white"
                android:src="@drawable/img_logo" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Course Information"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_nav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/icon_drawermenu"
                android:text=""
                app:backgroundTint="@color/white"
                style="@style/Widget.Material3.Button.IconButton" />

        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/headerBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Course Information Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Header Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📚 Course Information"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detailed information about all our available courses"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="32dp" />

                <!-- Six-Month Courses Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎓 Six-Month Courses (R1500 each)"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightblue"
                    android:layout_marginBottom="16dp" />

                <!-- First Aid Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/img_course_firstaid"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🚑 First Aid"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose: To provide first aid awareness and basic life support"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Content:\n• Wounds and bleeding\n• Burns and fractures\n• Emergency scene management\n• Cardio-Pulmonary Resuscitation (CPR)\n• Respiratory distress e.g., Choking, blocked airway"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Sewing Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/img_course_sewing"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🧵 Sewing"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose: To provide alterations and new garment tailoring services"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Content:\n• Types of stitches\n• Threading a sewing machine\n• Sewing buttons, zips, hems and seams\n• Alterations\n• Designing and sewing new garments"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Landscaping Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/img_course_landingscaping"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🌿 Landscaping"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose: To provide landscaping services for new and established gardens"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Content:\n• Indigenous and exotic plants and trees\n• Fixed structures (fountains, statues, benches, tables, built-in braai)\n• Balancing of plants and trees in a garden\n• Aesthetics of plant shapes and colours\n• Garden layout"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Life Skills Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/img_course_lifeskills"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🎯 Life Skills"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose: To provide skills to navigate basic life necessities"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Content:\n• Opening a bank account\n• Basic labour law (know your rights)\n• Basic reading and writing literacy\n• Basic numeric literacy"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Six-Week Short Courses Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚡ Six-Week Short Courses (R750 each)"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="16dp" />

                <!-- Child Minding Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/img_course_childminding"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="👶 Child Minding"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose: To provide basic child and baby care"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Content:\n• Birth to six-month old baby needs\n• Seven-month to one year old needs\n• Toddler needs\n• Educational toys"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Cooking Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_course_cooking" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="🍳 Cooking"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Purpose: To prepare and cook nutritious family meals"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:text="Content:\n• Nutritional requirements for a healthy body\n• Types of protein, carbohydrates and vegetables\n• Planning meals\n• Tasty and nutritious recipes\n• Preparation and cooking of meals"
                            android:textColor="#444444"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Garden Maintenance Course -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Large Image at Top -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/img_course_gardenmaintenance"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_bg_light"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🌱 Garden Maintenance"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose: To provide basic knowledge of watering, pruning and planting in a domestic garden"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Content:\n• Water restrictions and the watering requirements of indigenous and exotic plants\n• Pruning and propagation of plants\n• Planting techniques for different plant types"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>

</androidx.drawerlayout.widget.DrawerLayout>